@keyframes :local(alert-top-enter) {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes :local(alert-top-leave) {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

alert-font()
  padding: arguments
  font: $ALERT_FONT
  line-height: $ALERT_FONT_LINE_HEIGHT
  -webkit-font-smoothing: antialiased
  border-radius: 0
  margin: 5px 10px 5px 10px
